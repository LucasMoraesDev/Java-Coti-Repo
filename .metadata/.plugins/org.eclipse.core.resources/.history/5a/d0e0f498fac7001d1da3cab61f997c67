package principal;

import java.util.Scanner;

import entities.Cliente;

public class Program {
	public static void main(String[] args) {
		System.out.println("CADASTRO DE CLIENTES:\n");

		Scanner scanner = new Scanner(System.in);

		Cliente cliente = new Cliente();

		System.out.print("ENTRE COM O ID DO CLIENTE......: ");
		cliente.idCliente = Integer.parseInt(scanner.nextLine());
		
		System.out.print("ENTRE COM O NOME DO CLIENTE....: ");
		cliente.nome = scanner.nextLine();
		
		System.out.print("ENTRE COM O EMAIL DO CLIENTE...: ");
		cliente.email = scanner.nextLine();

		System.out.println("ID DO CLIENTE...: " + cliente.idCliente);
		System.out.println("NOME............: " + cliente.nome);
		System.out.println("EMAIL...........: " + cliente.email);
	}
}
